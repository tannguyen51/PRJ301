<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>my_servlet.HelloServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BangCuuChuongSerVlet</servlet-name>
        <servlet-class>my_servlet.BangCuuChuongSerVlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CounterSerVlet</servlet-name>
        <servlet-class>my_servlet.CounterSerVlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/HelloServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BangCuuChuongSerVlet</servlet-name>
        <url-pattern>/BangCuuChuongSerVlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CounterSerVlet</servlet-name>
        <url-pattern>/CounterSerVlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
